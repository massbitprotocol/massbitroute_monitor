{
  "checking_chain_type": [
    {
      "blockchain": "eth",
      "component": "node",
      "check_steps": [
        {
          "action": {
            "type": "call",
            "is_base_node": true,
            "request_type":"POST",
            "header":{"content-type":"application/json"},
            "body":"{ \"jsonrpc\": \"2.0\",  \"method\": \"eth_getBlockByNumber\", \"params\": [\"0x1\",  true]",
            "time_out":10000,
            "return_fields":{"hash":"result/hash","block_number":"result/number"}
          },
          "return_name": "base_return",
          "failed_case":{
            "critical": true,
            "message": "cannot get call base_node_url"
          }
        },
        {
          "action":{
            "type": "call",
            "is_base_node": false,
            "request_type":"POST",
            "header":{"content-type":"application/json"},
            "body":"{ \"jsonrpc\": \"2.0\",  \"method\": \"eth_getBlockByNumber\", \"params\": [\"0x1\",  true]}",
            "time_out":10000,
            "return_fields":{ "hash":"result/hash","block_number":"result/number"}
          },
          "return_name":"check_return",
          "failed_case": {
            "critical": true,
            "message": "cannot get call check_node_url"
          }
        },
        {
          "action":{
            "type":"compare",
            "compare_items": {
              "operator": "and",
              "params": [
                {
                  "operator": "eq",
                  "params": ["base_return/hash","check_return/hash"]
                },
                {
                  "operator": "eq",
                  "params": ["base_return/block_number","check_return/block_number"]
                }
              ]
            }
          },
          "return_name":"compare_return",
          "failed_case": {
            "critical": true,
            "message": "check node is difference from base_node"
          }
        }

      ]
    }
  ]
}